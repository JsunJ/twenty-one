extends layout

block tableContent
  section.dealer
    ul
      li
        img.card(src="/images/card_placeholder.png")

  section.rules
    p.hand-text(style="visibility: hidden") Dealer Hand:
    p(style="visibility: hidden") &nbsp
    p.rules-pay BLACKJACK PAYS 3 TO 2
    p.rules Dealer must draw to 16 and stand on 17
    p.hand-text(style="visibility: hidden") Your Hand:
    p.player-total(style="visibility: hidden") &nbsp

  section.actions(style="margin: 0 25%")
    form(action="/game/bet" method="post" style="width: 100%")
      dl
        dt.side-by-side
          label(for="betAmount") Place your bet:
        dd.side-by-side
          input(type="number"
                id="betAmount"
                name="betAmount"
                value="100")
      
      fieldset.center-actions
        input(type="submit" value="BET")

  section.player(style="margin-top: 5px")
    ul
      li
        img.card(src="/images/card_placeholder.png")

block barContent