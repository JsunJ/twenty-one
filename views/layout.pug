doctype html

html(lang="en-US")

  head
    title Twenty One
    meta(charset="UTF-8")
    link(rel="stylesheet" href="//fonts.googleapis.com/css?family=Spectral")
    link(rel="stylesheet" href="/stylesheets/whitespace-reset.css")
    link(rel="stylesheet" href="/stylesheets/application.css")
    script(src="/javascripts/application.js")

    body
      main
        div.table
          block tableContent
      
      section.flash-messages
        - let kinds = Object.keys(flash || {});
        if kinds.length > 0
          ul
            each kind in kinds
              each message in flash[kind]
                li.flash(class=kind)= message
      
      section.bar
        p Sign In
        p Your Purse: $1000 #{purse}
        p Your Bet: $#{bet || 0}
        block barContent

      footer
        block footer